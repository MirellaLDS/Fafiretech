<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvLabelUm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Label Um"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="#85CC33"
        android:onClick="changeColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLabelDois"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Label dois"
        android:gravity="center"
        android:padding="8dp"
        android:background="#85CC33"
        android:textColor="@color/white"
        android:onClick="changeColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvLabelCinco"
        app:layout_constraintTop_toTopOf="@id/tvLabelTres" />

    <TextView
        android:id="@+id/tvLabelTres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Label TrÃªs"
        android:background="#85CC33"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:onClick="changeColor"
        app:layout_constraintStart_toEndOf="@id/tvLabelDois"
        app:layout_constraintTop_toBottomOf="@id/tvLabelUm"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLabelQuatro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Label quatro"
        android:background="#85CC33"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:onClick="changeColor"
        app:layout_constraintStart_toEndOf="@id/tvLabelDois"
        app:layout_constraintTop_toBottomOf="@id/tvLabelTres"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvLabelCinco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Label cinco"
        android:background="#85CC33"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:onClick="changeColor"
        app:layout_constraintStart_toEndOf="@id/tvLabelDois"
        app:layout_constraintTop_toBottomOf="@id/tvLabelQuatro"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>